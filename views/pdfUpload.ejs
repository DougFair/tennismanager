<% include partials/header %>

<div class="container">

<form action="/pdfCreate" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="fileUpload">Select file to upload</label>
        <input type="file" class="form-control-file" name="file" id="file-Upload" placeholder="Upload pdf file">
    </div>
    <div class="form-group">
        <input type="text"  class="form-control" name="fileName" placeholder="Input file name to display">
    </div>
    <div class="form-group">
        <input type="submit" class="form-control col-3 btn btn-outline-primary" value="Upload PDF">
    </div>
</form>
<% include partials/footer %>