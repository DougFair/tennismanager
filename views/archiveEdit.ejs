<% include partials/header %>
<div class="container">
   
    <h3>Add details of each round this season</h3>

    <form action="/archivePastDetailsUpdate/<%= id %>?_method=PUT" method="POST">
        
    <div class="form-inline">
        <div class="form-group mx-sm-1 mb-1">
            <input type="text" class="form-control" placeholder="Player 1" name="archivePast[player_1]" value="<%= player1 %>">
        </div>
        <div class="form-group mx-sm-1 mb-1">
            <input type="text" class="form-control" placeholder="Player 2" name="archivePast[player_2]" value="<%= player2 %>">
        </div>
        <div class="form-group mx-sm-1 mb-1">
            <input type="text" class="form-control" placeholder="Player 3" name="archivePast[player_3]" value="<%= player3 %>">
        </div>
        <div class="form-group mx-sm-1 mb-1">
            <input type="text" class="form-control" placeholder="Player 4" name="archivePast[player_4]" value="<%= player4 %>">
        </div>
    </div>    
        
     <div class="form-inline">
        <div class="form-group mb-1">
            <input type="text" class="form-control" placeholder="Round" name="archivePast[round]" value="<%= round %>">
        </div>
        <div class="form-group mx-sm-1 mb-1">
            <input type="date" class="form-control" placeholder="Date" name="archivePast[date]" value="<%= date %>">
        </div>
            <div class="form-group mx-sm-1 mb-1">
                <input type="text" class="form-control" placeholder="Home Team" name="archivePast[homeTeam]" value="<%= homeTeam %>">
            </div>
        <div class="form-group mx-sm-1 mb-1">
            <input type="text" class="form-control" placeholder="Home Team" name="archivePast[awayTeam]" value="<%= awayTeam %>">
        </div>
        <div class="form-group mx-sm-1 mb-1">
            <input class="form-control" type="text" placeholder="Score" name="archivePast[score]" value="<%= score %>">
        </div>
            <input type="submit" class="btn btn-primary mb-1" value="Submit Round">
        </div>    
    </form>
    <br>
</div>

<% include partials/footer %>