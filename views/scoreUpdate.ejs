<% include partials/header %>
<div class="container">
<h3>Update scores for specified round</h3>


<form action="/scoreUpdate?_method=PUT" method="POST">
    <div class="form-group col-3">
        <input type="text" class="form-control" name="round" placeholder="Enter Round">
    </div>
    
    <div class="form-group col-3">
        <input type="text" class="form-control" name="score" placeholder="Enter Score (e.g. ##-##)">
    </div>

    <div class="form-group col-3">
        <input type="submit" class="form-control btn btn-success" value="Submit">
    </div>

</form>


</div>
<% include partials/footer %>