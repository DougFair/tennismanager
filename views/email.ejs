<% include partials/header %>

<div class="container">
<h5>Enter your email password to send message to team:</h5>
    <form action="/emailPassword" method="POST">
        <div class="form-group">
            <input type="password" class="form-control col-4" name="password" placeholder="Password">
        </div>
        <div class="form-group">
         <h5>The email message willl read as follows. Edit as required:</h5>
          <textarea class="form-control" rows="5" cols="50" name="Text"><%=Text%></textarea>
        </div>
         <div class="form-group">
            <input type="hidden" name="sendTo" value="<%=sendTo%>">
            <input type="hidden" name="Subject" value="<%=Subject%>">
            <input type="submit" class="btn btn-outline-success form-control col-4">
        </div>       
    </form>
</div>


<% include partials/footer %>