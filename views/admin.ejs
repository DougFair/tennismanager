<% include partials/header %>

<% var seasonID %>
<% season.forEach(function(seasonDetails){ %>
  <% seasonID = seasonDetails._id %>
<% }); %>


<div class="container">

<h4>Welcome to the Administrators page!</h4>

<br>
<h5 style="color:SteelBlue"> Update specific rounds</h5>
<table style="max-width:80%" class="table table-striped">

    <tbody>
        <tr>
            <div class="form-inline justify-content-center">
            <td>Input scores</td> 
            <td><a href="/scoreUpdate" class="btn btn-primary">Input</a></td>
            </div>
        </tr>
                    
        <tr>
            <div class="form-inline justify-content-center">
            <td>Update the ladder</td>
            <td><a href="/ladderedit" class="btn btn-primary">Update</a></td>    
            </div>
        </tr>
        
        <tr>
            <td>Add players for a round</td> 
            <td>
                <form action="/addPlayers" method="POST" >
                    <div class="form-inline justify-content-center">
                    <input  style="margin-right: 5px" type="number" class="form-control col-3" placeholder="Rnd #" name="playerAddRound">
                    <input type="hidden" name="emailList" value="<%= emailList %>">
                    <button type="submit" class="form-control btn btn-primary">Add</button>
                    </div>
                </form> 
            </td>
        </tr>
        
        <tr>
            <td>Edit / Update players for a round</td> 
            <td>
                <form action="/editPlayers" method="POST">
                    <div class="form-inline justify-content-center">
                    <input type="number" style="margin-right: 5px" class="form-control col-3" placeholder="Rnd #" name="playerEditRound">
                    <input type="hidden" name="emailList" value="<%= emailList %>">
                    <button type="submit" class="form-control btn btn-primary">Edit/Update</button>
                    </div>
                </form>  
            </td>
            
        </tr>   
        
        <tr>
            <td>Edit details of any round in the current season</td>
            <td>
                <form action="/matchesEdit" method="GET">
                    <div class="form-inline justify-content-center">
                        <button type="submit" class="btn btn-primary mb-1">Edit</button>
                    </div>
                </form>
            </td>
        </tr>

    </tbody>
</table>

<br>
<hr>

<h5 style="color : SteelBlue">Create or update a season</h5>
<table style="max-width:85%" class="table table-striped">
    <tbody>
        
        <tr>
            <td>Create a new season</td>
            <td>
                <form action="/seasonPlayer" method="POST">
                <div class="form-inline">
                    <div class="form-group mb-1 mr-1">   
                        <input type="text" class="form-control" placeholder="Year" name="season[year]">
                    </div>
                    <div class="form-group mx-sm-1 mb-1">   
                        <input type="text" class="form-control" placeholder="Season" name="season[season]">
                    </div>
                    <div class="form-group mb-1 mr-1">
                        <input type="number" class="form-control" placeholder="Section" name="season[section]">
                    </div>
                    <div class="form-group mb-1">
                    <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </div>
                </form>
            </td>
        </tr>
        
        <tr>
            <td>Add extra players or extra rounds to current season</td>
            <td>
                <form action="/seasonPlayerEdit/<%= seasonID %>?_method=PUT" method="POST">
                    <div class="form-inline justify-content-center">
                        <input type="hidden" name="edited" value="true">
                        <button type="submit" class="btn btn-primary mb-1">Add</button>
                    </div>
                </form>
            </td>
        </tr>

        <tr>
            <td>Upload files</td>
            <div class="form-inline justify-content-center">
            <td><a href="/pdfUpload" class="btn btn-primary">Upload file page</a></td>    
            </div>
        </tr>
        </tbody>
</table>  
<br>
<hr>

<h5 style="color:SteelBlue">Season archiving</h5>
<table style="max-width:90%" class="table table-striped">
    <tbody>
        <tr>
            <td>Archive the current season</td> 
            <td>
                <form action="/archiveCurrent" method="POST">
                <div class="form-group mb-1">
                <button type="submit" class="form-control btn btn-primary col-4" name"season" value="current">Archive current</button>
                </div>
                </form>
            </td>
        </tr>

        <tr>
            <td>Archive a past season</td>
            <td>
                <form action="/archivePast" method="POST">
                    <div class="form-inline">
                    <div class="form-group mb-1 mr-1">
                        <input type="text" class="form-control" placeholder="Year" name="year">
                    </div>
                    <div class="form-group mb-1 mr-1">
                        <input type="text" class="form-control" placeholder="Season" name="season">
                    </div>
                    <div class="form-group mb-1 mr-1">
                        <input type="number" class="form-control" placeholder="Section" name="section">
                    </div>
                    <div class="form-group mb-1">
                    <button type="submit" class="btn btn-primary">Archive Past</button>
                    </div>
                    </div>
                </form>
            </td>
        </tr>
    </tbody>
</table>  
    
   
</div>
<% include partials/footer %>

