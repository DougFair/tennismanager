<% include partials/header %>

<div class="container">

<form action="/photoCreate" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="fileUpload">Select file to upload</label>
        <input type="file" class="form-control-file" name="file" id="file-Upload" placeholder="Upload photo file">
    </div>
    <div class="form-group">
        <input type="text"  class="form-control" name="caption" placeholder="Add a caption if you want">
    </div>
    <div class="form-group">
        <input type="submit" class="form-control col-3 btn btn-outline-primary" value="Add Photo">
    </div>
</form>
<div class="card-columns">
<% photos.forEach(function(photo){%>
    <div class= "card">
      <img class="card-img-top" src="<%=photo.imagePath %>" alt="Card image">
      <div class="card-body">
        <p class="card-text"> <%= photo.caption %></p>
        <form action="/photoDelete/<%=photo._id%>?_method=DELETE" method="POST">
        <input type="submit" class="btn btn-outline-danger btn-sm" value="Delete">
        </form>
      </div>
    </div>
    <% }); %>    
</div>  

</div>
<% include partials/footer %>
   